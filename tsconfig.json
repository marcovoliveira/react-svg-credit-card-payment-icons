{
  "include": [
    "src/**/*",
    "src/stories/PaymentIcon.stories.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "jsx": "react",
    "target": "es2022",
    "module": "commonjs",
    "lib": [
      "es2022"
    ],
    "declaration": true,
    "outDir": "dist",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}